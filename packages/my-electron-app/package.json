{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "electron-builder --win --x64"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^19.0.4",
    "electron-builder": "^23.1.0"
  },
  "dependencies": {
    "electron-is-dev":"^2.0.0",
    "yarn": "^1.22.19"
  },
  "build": {
    "asar":false,
    "appId": "rust-yx.app",
    "mac": {
      "target": ["dmg","zip"]
    },
    "win": {
      "icon":"./build/tea.png",
      "target": ["nsis","zip"]
    },
    "nsis":{
      "oneClick":"false",
      "allowToChangeInstallationDirectory":"true",
      "installerIcon": "./build/favicon.ico"
    },
    "files" : [
      {
        "from": "./",
        "to": "./"
      },
      "!dist",
      {
        "from": "../web-app/dist/*",
        "to": "web"
      }
    ]
    
  }
}
